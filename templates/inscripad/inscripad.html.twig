        <div class="registration-list">
            <div class="registration-item">
                <div class="user-avatar">
                    <img src="user1.jpg" alt="Utilisateur 1">
                </div>
                <div class="registration-details">
                    <h3>Nom Complet 1</h3>
                    <p>Événement : Conférence sur la Science des Données</p>
                    <p>Date d'Inscription : 10 Juillet 2024</p>
                    <button class="delete-btn"><i class="fas fa-user-times"></i> Annuler Inscription</button>
                </div>
            </div>
