    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <title>Gestion des Événements</title>
</head>
<style>
    header h1 {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5em;
}

header i {
    margin-right: 10px;
}

.admin-section {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
}

h2 {
    margin-bottom: 20px;
    text-align: center;
}

.event-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    grid-gap: 20px;
}

.event-item {
    border: 1px solid #ddd;
    border-radius: 10px;
    overflow: hidden;
}

.event-image img {
    width: 100%;
    height: 150px;
    object-fit: cover;
}

.event-details {
    padding: 15px;
}

.event-details h3 {
    margin-bottom: 10px;
}

.edit-btn,
.delete-btn {
    background-color: #333;
    color: #fff;
    padding: 8px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-right: 5px;
    transition: background-color 0.3s;
}

.edit-btn:hover,
.delete-btn:hover {
    background-color: #555;
}
</style>
<body>
    <header>
        <h1><i class="far fa-calendar-alt"></i> Gestion des Événements</h1>
    </header>

    <section class="admin-section">
        <h2>Liste des Événements</h2>
        <div class="event-list">
            <div class="event-item">
                <div class="event-image">
                    <img src="event1.jpg" alt="Événement 1">
                </div>
                <div class="event-details">
                    <h3>Conférence sur la Science des Données</h3>
                    <p>Date : 15 Juillet 2024</p>
                    <p>Lieu : Amphithéâtre A</p>
                    <button class="edit-btn"><i class="fas fa-edit"></i> Modifier</button>
                    <button class="delete-btn"><i class="fas fa-trash-alt"></i> Supprimer</button>
                </div>
            </div>
